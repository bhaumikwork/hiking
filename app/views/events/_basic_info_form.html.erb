<div id="page-wrapper" >
    <div id="page-inner">
      <div class="row">
        <div class="col-md-12">
          <h2>Step 1 - Add Basic Information</h2>
          <h5>Name of the Trip/Hike</h5>
        </div>
      </div>
      <!-- /. ROW  -->
      <hr />

      <%= form_for(@event, url: @event.new_record? ? save_basic_info_events_path : update_basic_info_events_path(@event), method: @event.new_record? ? :post : :put,html: {class: "col-xs-8"}) do |f| %>
          <div class="form-group">
              <label>Name of the Trip/Hike</label>
              <%= f.text_field :trip_name, class: "form-control", required: true %>
          </div>
          <div class="form-group">
              <label>Short Description of Trip/Hike</label>
              <%= f.text_area :trip_description, class: "form-control", rows: "3" %>
          </div>

         <div class="form-group col-xs-6" style="padding-left: 0px;">
            <label>Location</label>
            <%= f.text_field :trip_location, class: "form-control" %>
          </div>
          <div class="form-group col-xs-6" style="padding-right: 0px;">
              <label>Contact Person</label>
              <%= f.text_field :contact_person_name, class: "form-control" %>
          </div>
          <div class="form-group col-xs-6" style="padding-left: 0px;">
              <label>Contact Person Mobile Number</label>
              <%= f.text_field :contact_person_mobile, class: "form-control" %>
          </div>
          <div class="form-group col-xs-6" style="padding-right: 0px;">
              <label>Contact Person Emailid</label>
              <%= f.email_field :contact_person_email, class: "form-control" %>
          </div>
          <div class="form-group col-xs-6" style="padding-left: 0px;">
              <label>Start Date</label>
              <%= f.text_field :start_date, class: "form-control", required: true %>
          </div>
          <div class="form-group col-xs-6" style="padding-right: 0px;">
              <label>End Date</label>
              <label style="float: right;">
                  <input type="checkbox" value="" />Single Day Event?
              </label>
              <%= f.text_field :end_date, class: "form-control", required: true %>

          </div>
          <div class="form-group col-xs-6" style="padding-left: 0px;">
              <label>Maximum Participant</label>
              <%= f.text_field :max_participant, class: "form-control" %>
          </div>
          <div class="col-xs-12" style="padding: 0px; text-align: right;">
              <button  type="submit" class="btn btn-primary">Save and goto Next Step</button>
          </div>
      <% end %>
      <%= render 'help_text' %>
    </div>
