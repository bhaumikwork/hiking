<h1>Emergency Information</h1>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Who's Going : </label>
    <label class="col-sm-6"><%= Event.is_empty(@event.emergency_info.try(:going_person_name)) %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Contact(s) : </label>
    <label class="col-sm-6"><%= Event.is_empty(@event.contact_person_email) %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Start Location :</label>
    <label class="col-sm-6"><%= Event.is_empty(@event.emergency_info.try(:start_location).to_s.html_safe) %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Finish Location : </label>
    <label class="col-sm-6"><%= Event.is_empty(@event.emergency_info.try(:finish_location).to_s.html_safe) %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Planned Route : </label>
    <label class="col-sm-6"><%= Event.is_empty(@event.emergency_info.try(:planned_route)) %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Transportation : </label>
    <label class="col-sm-6"><%= Event.is_empty(@event.emergency_info.try(:transportation)) %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Expected Departure : </label>
    <label class="col-sm-6"><%= @event.emergency_info.try(:expected_departure).present? ? @event.emergency_info.expected_departure.strftime("%A %B %d %Y").html_safe + '<br>1900 Sydney Time'.html_safe : "<span style='padding-left: 20px;'>-</span>".html_safe %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Expected Return : </label>
    <label class="col-sm-6"><%= @event.emergency_info.try(:expected_return).present? ? @event.emergency_info.expected_return.strftime("%A %B %d %Y").html_safe + '<br>1900 Sydney Time'.html_safe : "<span style='padding-left: 20px;'>-</span>".html_safe %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Freak Out Time : </label>
    <label class="col-sm-6"><%= Event.is_empty(@event.emergency_info.try(:freak_out_time)) %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Communications : </label>
    <label class="col-sm-6"><%= Event.is_empty(@event.emergency_info.try(:communications)) %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">inReach Map : </label>
    <label class="col-sm-6"><%= Event.is_empty(@event.emergency_info.try(:in_reach_map)) %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Local Contact : </label>
    <label class="col-sm-6"><%= Event.is_empty(@event.emergency_info.try(:local_contact_email)) %></label>
</div>
<div class="form-group">
    <label class="col-sm-6" style="font-weight: normal;">Managing Agency:</label>
    <label class="col-sm-6"><%= Event.is_empty(@event.emergency_info.try(:managing_agency)) %></label>
</div>